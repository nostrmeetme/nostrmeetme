		"@typescript-eslint/parser": "^6.0.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2"
	},
	"type": "module",
	"dependencies": {
		"@nostr-dev-kit/ndk": "^2.3.2",
		"@nostr-dev-kit/ndk-svelte-components": "^2.0.0",
