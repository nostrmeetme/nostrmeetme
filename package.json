		"nostr-login": "^1.0.13",
		"pm2": "^5.3.1",
		"postcss": "^8.4.33",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"svelte-copy": "^1.4.1",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^5.0.3"
	}
